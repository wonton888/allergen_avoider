<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" type="text/css">
        <link rel="stylesheet" href="/../css/restaurant.css" type="text/css">
        <!-- <link rel="stylesheet" href="css/styles.css" media="screen" title="no title" charset="utf-8"> -->
        <title>Option Avoider</title>
    </head>
    <body>
        <div class="container box">
            <h1>{{ restaurant.getName }}</h1>
            <hr>
            <h3>Dietary options:</h3>
            <ul class="pink">
                {% for option in restaurant_options %}
                    <li>{{ option.getName }}</li>
                {% endfor %}
            </ul>
            <hr>
            <h3>Add an option for this restaurant:</h3>

            <form action="/add_restaurant_options" method="post">
                <input id="restaurant_id" name="restaurant_id" type="hidden" value="{{ restaurant.getId }}">

                <div class="form-group">
                    <label for="option_id">Select option:</label>
                    <select id="option_id" name="option_id">
                        {% for option in all_options %}
                            <option value="{{ option.getId }}">{{ option.getName }}</option>
                        {% endfor %}
                    </select>
                    <button type="submit" class="btn btn-sm btn-success">Add</button>
                </div>
            </form>
            <hr>
            <form action="/admin">
                <button type="submit" class="btn btn-primary">Back to Admin</button>
            </form>

            <form action="/restaurants/{{ restaurant.getId }}/delete" method="post">
                <button type="submit" class="btn btn-danger">Delete Restaurant</button>
            </form>
        </div>
    </body>
</html>
